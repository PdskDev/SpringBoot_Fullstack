<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0// EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- Mapper and xml mapping -->
<mapper namespace="com.nadet.demo.repository.UserMapper">
	<!-- Mapping definition -->
	<resultMap type="com.nadet.demo.domain.user.model.MUser"
		id="user">
		<id column="user_id" property="userId" />
		<id column="password" property="password" />
		<id column="user_name" property="userName" />
		<id column="birthday" property="birthday" />
		<id column="age" property="age" />
		<id column="gender" property="gender" />
		<id column="department_id" property="departmentId" />
		<id column="role" property="role" />
	</resultMap>
	<!-- user registration -->
	<insert id="insertOne">
		insert into m_user(
		user_id,
		password,
		user_name,
		birthday,
		age,
		gender,
		department_id,
		role
		)
		values (
		#{userId},
		#{password},
		#{userName},
		#{birthday},
		#{age},
		#{gender},
		#{departmentId},
		#{role}
		)
	</insert>

	<!-- Get user (multiple) -->
	<select id="findMany" resultType="MUser">
		select * from m_user
		<where>
		<if test="userId != null">
		user_id like '%' || #{userId} || '%'
		</if>
		<if test="userName != null">
		and user_name like '%' || #{userName} || '%'
		</if>
		</where>
	</select>
	<!-- Get user (1 record) -->
	<select id="findOne" resultMap="user">
		select * from m_user where user_id = #{userId}
	</select>
	<!-- Update user -->
	<update id="updateOne">
		update m_user set password = #{password}, user_name = #{userName}
		where user_id = #{userId}
	</update>
	<!-- Delete user -->
	<delete id="deleteOne">
		delete from m_user where user_id = #{userId}
	</delete>
</mapper>